<%- include ('partials/header') %>
<div class="ui main text container segment">
    <div class="main header"><h1><b>Create Your Blog Here</b></h1></div>
    <form class="ui form" method="POST" action="/blogs">
        <div class="field">
            <label>Title of Your Blog</label>
            <input type="text" name="blog_route[title]" placeholder="Enter Title Here" />
        </div>
        <div class="field">
            <label>Image of Your Blog</label>
            <input type="text" name="blog_route[image]" placeholder="Enter Image's URL" />
        </div>
        <div class="field">
            <label>Description of Your Blog</label>
            <textarea name="blog_route[body]" cols="30" rows="10"></textarea>
        </div>
        <button class="ui inverted violet button">Submit</button>

    </form>
</div>





